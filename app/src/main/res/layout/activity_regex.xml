<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/matchTitleTv"
                android:text="匹配:"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/matchTv"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="匹配规则:"
                android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:layout_margin="10dp"
                    android:id="@+id/matchEt"
                    android:imeOptions="actionDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/clearMatchTv"
                    android:layout_width="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@id/matchEt"
                    android:text="X"
                    android:gravity="center"
                    android:layout_height="40dp"/>
        </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:text="测试字符串:"
                android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/testStrEt"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:imeOptions="actionDone"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/clearTestStrTv"
                    android:layout_width="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@id/testStrEt"
                    android:text="X"
                    android:gravity="center"
                    android:layout_height="40dp"/>
        </RelativeLayout>

        <HorizontalScrollView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/regexBtn1"
                        android:text="HTML标签(贪婪)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <Button
                        android:id="@+id/regexBtn2"
                        android:text="HTML标签(懒惰)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <Button
                        android:id="@+id/regexBtn3"
                        android:text="HTML标签(取反)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <Button
                        android:id="@+id/regexBtn4"
                        android:text="group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <Button
                        android:id="@+id/regexBtn5"
                        android:text="回溯"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <Button
                        android:id="@+id/regexBtn6"
                        android:text="ssssss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <Button
                        android:id="@+id/regexPwdBtn"
                        android:text="6-12位字母或数字密码,可以有特殊字符"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
        </HorizontalScrollView>

        <Button
                android:id="@+id/testRegexBtn"
                android:text="试试"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>