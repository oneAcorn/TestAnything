<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
            android:id="@+id/testAnimatorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="示例1" />

    <Button
            android:id="@+id/testAnimatorBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="示例2" />

    <Button
            android:id="@+id/testAnimatorBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="示例3" />

    <Button
            android:id="@+id/testAnimatorBtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="示例4" />

    <Button
            android:id="@+id/testAnimatorBtn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="示例5" />

    <Button
            android:id="@+id/testBtn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test6"
            android:textAllCaps="false" />

    <com.acorn.testanything.testAnimator.ClickView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#FDD5A7" />

    <ImageView
            android:id="@+id/arrowIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E2F394"
            android:src="@mipmap/mirror_slide_tip" />
