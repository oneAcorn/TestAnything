<?xml version="1.0" encoding="utf-8"?>
<com.acorn.testanything.testNested.NestedViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3AF091">

        <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="标题"
                android:textSize="30sp"
                android:textColor="#ffffff"
                />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            app:tabTextColor="#2BB61C"
            app:tabIndicatorColor="#2BB61C"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorHeight="2dp"
            app:tabSelectedTextColor="#279E9E"
            />

    <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</com.acorn.testanything.testNested.NestedViewGroup>